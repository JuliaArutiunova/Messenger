<?xml version="1.0" encoding="UTF-8"?>
<web-app
        xmlns="https://jakarta.ee/xml/ns/jakartaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
        https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
        version="6.0"
        metadata-complete="false">
    <display-name>Messenger</display-name>


    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>by.it_academy.jd2.controller.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/api/user</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>/ui/mainPage.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>LogInServlet</servlet-name>
        <servlet-class>by.it_academy.jd2.controller.LogInServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogInServlet</servlet-name>
        <url-pattern>/api/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MessageServlet</servlet-name>
        <servlet-class>by.it_academy.jd2.controller.MessageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MessageServlet</servlet-name>
        <url-pattern>/api/message</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ExitServlet</servlet-name>
        <servlet-class>by.it_academy.jd2.controller.ExitServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ExitServlet</servlet-name>
        <url-pattern>/api/exit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StatisticServlet</servlet-name>
        <servlet-class>by.it_academy.jd2.controller.StatisticServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StatisticServlet</servlet-name>
        <url-pattern>/api/admin/statistics</url-pattern>
    </servlet-mapping>



    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>by.it_academy.jd2.controller.filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>UserSecurityFilter</filter-name>
        <filter-class>by.it_academy.jd2.controller.filter.UserSecurityFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UserSecurityFilter</filter-name>
        <url-pattern>/ui/user/*</url-pattern>
        <url-pattern>/api/message</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AdminSecurityFilter</filter-name>
        <filter-class>by.it_academy.jd2.controller.filter.AdminSecurityFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminSecurityFilter</filter-name>
        <url-pattern>/ui/admin/*</url-pattern>
        <url-pattern>/api/admin/*</url-pattern>
    </filter-mapping>



    <listener>
        <listener-class>by.it_academy.jd2.controller.listener.SessionCounterListener</listener-class>
    </listener>

</web-app>